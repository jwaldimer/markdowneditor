<div id="viewport">
  <!-- Sidebar -->
  <div id="sidebar">
    <header>
      <a href="#">MarkdownEditor</a>
    </header>
    <ul class="nav">
    	<li>
        <a href="#" data-toggle="modal" data-target=".new-doc">
          <%= image_tag("add.png", class: "pull-left add-image") %>
          <p>New document</p>
        </a>
      </li>
    	<% @documents.each do |document| %>
	      <li>
	        <a href="#" title="<%= document.name %>">
	          <%= image_tag("document.png", class: "pull-left") %> 
	          <p><%= truncate(document.name, length: 22) %></p>
	          <span><%= document_old(document.updated_at) %> days ago</span>
	        </a>
	      </li>
	    <% end %>
    </ul>
  </div>


  <!-- Content -->
  <div id="content">
    <div class="container-fluid">
      <%= text_area_tag(:description, @documents.last.description) %>
			<button class="btn">Save</button>
			<button class="btn">Delete</button>
    </div>
    <div class="container-fluid">
      <%= @documents.last.description.html_safe %>
    </div>
  </div>


</div>


<div class="modal fade new-doc" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New Document</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default button-simple" data-dismiss="modal">Close</button>
        <button type="button" class="btn button-gray">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->